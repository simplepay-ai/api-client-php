{
    "name": "simplepay-ai/api-client",
    "description": "SimplePay API Client",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "SimplePay\\ApiClient\\": "src/"
        }
    },
    "authors": [
        {
            "name": "SimplePay"
        }
    ],
    "require": {
        "psr/http-client": "^1.0",
        "cuyz/valinor": "^1.14",
        "psr/http-message": "^2.0"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "^7.9",
        "guzzlehttp/psr7": "^2.7",
        "squizlabs/php_codesniffer": "^3.11"
    },
    "scripts": {
        "phpcs": [
            "phpcs -n --standard=PSR12 --ignore=vendor/* ."
        ],
        "phpcbf": [
            "phpcbf --standard=PSR12 --ignore=vendor/* ."
        ]
    }
}
